<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">
    <ImageView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
        android:id="@+id/my_image_view"
        />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#FFFFFF"
              android:layout_weight="1"
              android:id="@+id/road_left">

              <ImageView
                  android:id="@+id/rock_left1"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/rock"
                  android:layout_weight="1"/>
              <ImageView
                  android:id="@+id/rock_left2"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/rock"
                  android:layout_weight="1"/>
              <ImageView
                  android:id="@+id/rock_left3"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/rock"
                  android:layout_weight="1"/>
              <ImageView
                  android:id="@+id/rock_left4"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/rock"
                  android:layout_weight="1"/>
              <ImageView
                  android:id="@+id/rock_left5"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/rock"
                  android:layout_weight="1"/>
              <ImageView
                  android:id="@+id/rock_left6"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/rock"
                  android:layout_weight="1"/>
              <ImageView
                  android:id="@+id/rock_left7"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/rock"
                  android:layout_weight="1"/>
              <ImageView
                  android:id="@+id/rock_left8"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/rock"
                  android:layout_weight="1"/>

              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/motor"
                  android:layout_weight="2"
                  android:id="@+id/motor_left"

                  />

          </LinearLayout>

          <LinearLayout
              android:id="@+id/road_middle"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_toEndOf="@+id/road_left"
              android:layout_weight="1"
              android:background="#FFFFFF"
              android:orientation="vertical">

              <ImageView
                  android:id="@+id/rock_middle1"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:src="@drawable/rock" />
              <ImageView
                  android:id="@+id/rock_middle2"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:src="@drawable/rock" />
              <ImageView
                  android:id="@+id/rock_middle3"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:src="@drawable/rock" />
              <ImageView
                  android:id="@+id/rock_middle4"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:src="@drawable/rock" />
              <ImageView
                  android:id="@+id/rock_middle5"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:src="@drawable/rock" />


              <ImageView
                  android:id="@+id/rock_middle6"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:src="@drawable/rock" />
              <ImageView
                  android:id="@+id/rock_middle7"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:src="@drawable/rock" />
              <ImageView
                  android:id="@+id/rock_middle8"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:src="@drawable/rock" />

              <ImageView
                  android:id="@+id/motor_middle"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="2"
                  android:src="@drawable/motor"


                  />
          </LinearLayout>

          <LinearLayout
              android:layout_toEndOf="@+id/road_middle"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#FFFFFF"
              android:layout_weight="1"
              android:id="@+id/road_right"
              >
              <ImageView
                  android:id="@+id/rock_right1"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/rock"
                  android:layout_weight="1"/>
              <ImageView
                  android:id="@+id/rock_right2"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/rock"
                  android:layout_weight="1"/>
              <ImageView
                  android:id="@+id/rock_right3"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/rock"
                  android:layout_weight="1"/>
              <ImageView
                  android:id="@+id/rock_right4"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/rock"
                  android:layout_weight="1"/>
              <ImageView
                  android:id="@+id/rock_right5"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/rock"
                  android:layout_weight="1"/>
              <ImageView
                  android:id="@+id/rock_right6"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/rock"
                  android:layout_weight="1"/>
              <ImageView
                  android:id="@+id/rock_right7"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/rock"
                  android:layout_weight="1"
                  />
              <ImageView
                  android:id="@+id/rock_right8"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/rock"
                  android:layout_weight="1"/>

              <ImageView
                  android:baselineAlignBottom="true"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:src="@drawable/motor"
                  android:id="@+id/motor_right"

                  android:layout_weight="2"


                  />

          </LinearLayout>




      </LinearLayout>

    <ImageView
        android:id="@+id/panel_IMG_heart1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_heart" />

    <ImageView
        android:id="@+id/panel_IMG_heart2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/panel_IMG_heart1"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/panel_IMG_heart1"
        android:src="@drawable/ic_heart" />

    <ImageView
        android:id="@+id/panel_IMG_heart3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/panel_IMG_heart1"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/panel_IMG_heart2"
        android:src="@drawable/ic_heart" />
    <ImageButton
        android:id="@+id/button_left_arrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/nextbutton_left"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/transparent"

        />
    <ImageButton
        android:id="@+id/button_right_arrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/nextbutton1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/transparent"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Game Over!!"
        android:textColor="@color/black"
        android:textSize="30pt"
        android:id="@+id/gameOverText"

        />

</RelativeLayout>
